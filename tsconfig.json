{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vitest/importMeta",
      "vitest/globals"
    ],
    "baseUrl": "src",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@comps/*": [
        "components/*"
      ],
      "@component/*": [
        "components/*"
      ],
      "@comp/*": [
        "components/*"
      ],
      "test-util": [
        "utils/test-util"
      ]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
